<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="bottom|center"
    android:orientation="horizontal">

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@id/ver_actividad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="20dp"
        android:text="@string/fa_zoom"
        android:textColor="@color/colorAccent"
        android:textSize="40sp" />

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@id/fb_actividad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="20dp"
        android:text="@string/fa_facebook"
        android:textColor="@color/colorAccent"
        android:textSize="40sp" />

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@id/editar_actividad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="20dp"
        android:text="{fa-pencil}"
        android:textColor="@color/colorAccent"
        android:textSize="40sp"
        android:visibility="gone" />

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@id/borrar_actividad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="20dp"
        android:text="{fa-trash}"
        android:textColor="@color/colorAccent"
        android:textSize="40sp"
        android:visibility="gone" />

</LinearLayout>